    "@prisma/client": "^6.15.0",
    "@repo/auth": "*",
    "@repo/types": "*",
    "@types/ioredis": "^5.0.0",
    "body-parser": "^2.2.0",
    "bullmq": "^5.58.2",
    "cache-manager": "^7.2.0",
    "ioredis": "^5.7.0",
    "joi": "^18.0.1",
    "keyv": "^5.5.0",
    "nestjs-pino": "^4.4.0",
    "nestjs-zod": "^5.0.0",
    "pg": "^8.16.3",
