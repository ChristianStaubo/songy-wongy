{
  "preset": "ts-jest",
  "testEnvironment": "node",
  "rootDir": "..",
  "testRegex": ".(integration|e2e)-spec.ts$",
  "setupFilesAfterEnv": ["<rootDir>/test/setup.integration.ts"],
  "moduleNameMapper": {
    "^src/(.*)$": "<rootDir>/src/$1"
  },
  "testTimeout": 60000,
  "maxWorkers": 1,
  "forceExit": true,
  "detectOpenHandles": true
}
